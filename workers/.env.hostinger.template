# Hostinger VPS Environment Variables Template
# Copy your generated .env file and add these additional variables

# Docker Socket Location (for Vector logging)
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# Missing PostgreSQL schemas
PGRST_DB_SCHEMAS=public,storage,graphql_public

# Image proxy settings
IMGPROXY_ENABLE_WEBP_DETECTION=true

# Studio configuration
STUDIO_DEFAULT_ORGANIZATION=My Organization
STUDIO_DEFAULT_PROJECT=My Supabase Project

# Additional mailer URL paths (optional)
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# Hostinger VPS Performance Tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_DEFAULT_STATISTICS_TARGET=100
POSTGRES_RANDOM_PAGE_COST=1.1

# Resource limits for smaller VPS
KONG_NGINX_WORKER_PROCESSES=2
KONG_NGINX_WORKER_CONNECTIONS=1024

# Logging level (reduce for production)
POSTGRES_LOG_STATEMENT=none
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000
